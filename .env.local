# Application
APP_NAME="SpikeUp Organization (Local)"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
LOG_SLACK_WEBHOOK_URL=

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=spikeup_local
DB_USERNAME=root
DB_PASSWORD=

# Broadcasting, Cache, Session, Queue
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false

# Redis (Optional for local)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_PREFIX=spikeup_local_

# Mail
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=local@spikeup.com
MAIL_FROM_NAME="${APP_NAME}"

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost:8000,localhost:3000
SESSION_DOMAIN=localhost
SANCTUM_EXPIRATION=null

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000

# Performance & Security
CACHE_PREFIX=spikeup_local_
QUEUE_TIMEOUT=60
QUEUE_RETRY_AFTER=90
QUEUE_FAILED_DRIVER=database-uuids

# Storage
FILESYSTEM_DISK=local

# Rate Limiting
RATE_LIMIT=0
RATE_LIMIT_TIME=1

# Development
VITE_APP_ENV=local
VITE_APP_URL="${APP_URL}"
ASSET_URL="${APP_URL}"

# Debugging
DEBUGBAR_ENABLED=true
TELESCOPE_ENABLED=true
HORIZON_ENABLED=true

# Development Mail Server
MAIL_HOST=localhost
MAIL_PORT=1025

# Xdebug (if installed)
XDEBUG_MODE=debug
XDEBUG_CONFIG="client_host=host.docker.internal"